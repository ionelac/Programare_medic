@page
@model Programare_medic.Pages.Programari.IndexModel

@{
    ViewData["Title"] = "Index";
}

<head>
    <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />
</head>

<div class="cutie" class="cutie" data-aos="fade-right" data-aos-duration="2000">

<h1>PROGRAMĂRI:</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Programare[0].Pacient)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Programare[0].Serviciu)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Programare[0].Serviciu.Medic)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.Programare[0].DataProgramare)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Programare) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Pacient.NumeComplet)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Serviciu.Denumire_Serviciu)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Serviciu.Medic.NumeComplet)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataProgramare)
            </td>
        
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>

<script src="https://unpkg.com/aos@next/dist/aos.js"></script>
<script>
    AOS.init();
</script>